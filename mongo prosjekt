# https://www.youtube.com/watch?v=Jua-KWBdzfU
import random


valg = "y"
def rolldice(min, max): 
  print("Kaster terning...")
  number = random.randint(min, max)
  print(f"Tallet ditt : {number}")
  
while valg == "y":
    rolldice(1, 6)
    valg = input("Vil du rulle terningen igjen? (y/n)" )
    if valg.lower() == 'n':
        print("DÃ¥rlig valg")
        break    
